            android:textColor="#00B0FF"
            android:layout_marginTop="116dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginEnd="1dp" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="409dp"
            android:layout_height="154dp" app:srcCompat="@drawable/_9414350" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="87dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="490dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginEnd="1dp" app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>